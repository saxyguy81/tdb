package require tcltest 2
namespace import ::tcltest::*

set here [file dirname [info script]]
set pkgDir [file dirname $here]

if {[info exists ::env(TCLLIBPATH)]} {
    set ::env(TCLLIBPATH) "$pkgDir $::env(TCLLIBPATH)"
} else {
    set ::env(TCLLIBPATH) $pkgDir
}

test start-1.1 {tdb package loads} -body {
    package require tdb
} -result 0.1

test start-1.2 {tdb::start returns ok} -setup {
    package require tdb
} -body {
    tdb::start
    return ok
} -result ok

test start-1.3 {tdb::stop returns ok} -setup {
    package require tdb
} -body {
    tdb::stop
    return ok
} -result ok

cleanupTests
